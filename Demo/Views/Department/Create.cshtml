@model Demo.BL.Models.DepartmentVM




@{
    ViewData["Title"] = SharedLocalizer["Create"];
}


<div class="content-wrapper">

    <div class="content-header">
        <div class="container">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <a class="btn btn-success font-weight-bold" asp-controller="Department" asp-action="Index">@SharedLocalizer["Return"]</a>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">@SharedLocalizer["Departments"]</a></li>
                        <li class="breadcrumb-item active">@SharedLocalizer["DepartmentCreate"]</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>




    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">@SharedLocalizer["AND"]</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form asp-controller="Department" asp-action="Create">

                        <div class="card-body">

                            @*<div class="form-group">
                                <div asp-validation-summary="All" class="text-danger font-weight-bold"></div>
                            </div>*@


                            <div class="form-group">
                                <label asp-for="Name">@SharedLocalizer["Name"]</label>
                                <input type="text" class="form-control" asp-for="Name" placeholder="@SharedLocalizer["EnterName"]" autofocus autocomplete="off">
                                <span asp-validation-for="Name" class="text-danger font-weight-bold"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Code">@SharedLocalizer["Code"]</label>
                                <input type="text" class="form-control" asp-for="Code" placeholder="@SharedLocalizer["EnterCode"]" autocomplete="off">
                                <span asp-validation-for="Code" class="text-danger font-weight-bold"></span>
                            </div>
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <center>
                                <input type="submit" value="@SharedLocalizer["Submit"]" class="btn btn-primary" />
                                <input type="reset" value="@SharedLocalizer["Cancle"]" class="btn btn-warning" />
                            </center>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div>
        </div>

    </div>



</div>




@section JqueryValidation{
    <script src="~/plugins/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/plugins/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}