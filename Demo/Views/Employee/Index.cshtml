@model IEnumerable<EmployeeVM>


@{
    ViewData["Title"] = SharedLocalizer["Employees"];
}

@section DataTableStyles{
    <link rel="stylesheet" href="~/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
}

@section JqueryUI{
    <link href="~/plugins/jquery-ui/jquery-ui.min.css" rel="stylesheet" />
}


<div class="content-wrapper">

    <div class="content-header">
        <div class="container">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">
                        @SharedLocalizer["EmployeeCard"]
                        
                    </h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">
                            @SharedLocalizer["Employees"]
    
                        </a></li>
                        <li class="breadcrumb-item active">
                            @SharedLocalizer["EmployeeCard"]
                            
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>




    <div class="container">
        <a class="btn btn-primary mb-3 font-weight-bold" asp-controller="Employee" asp-action="Create">
            @SharedLocalizer["CNE"]
            
        </a>

        <form asp-controller="Employee" asp-action="Index" class="form-group mt-5 mb-5">
            <div class="row">
                <div class="col-xl-1">
                    <label for="datepicker1">
                        @SharedLocalizer["From"]
                        
                    </label>
                </div>
                <div class="col-xl-4">
                    <input type="text" id="datepicker1" class="form-control" name="DateFrom" placeholder="Click to set date from" autocomplete="off">
                </div>
                <div class="col-xl-1">
                    <label for="datepicker2">
                        @SharedLocalizer["To"]
                        
                    </label>
                </div>
                <div class="col-xl-4">
                    <input type="text" id="datepicker2" class="form-control" name="DateTo" placeholder="Click to set date to" autocomplete="off">
                </div>
                <div class="col-xl-2">
                    <input type="submit" value="Search" class="btn btn-primary" />
                </div>
            </div>
        </form>

        <div class="row">
            <div class="col-xl-12">
                <table id="Employees" class="table table-hover table-bordered table-striped font-weight-bold text-center">
                    <thead>
                        <tr>
                            <th>
                                @SharedLocalizer["Id"]
                                
                            </th>
                            <th>
                                @SharedLocalizer["Name"]
                                
                            </th>
                            <th>
                                @SharedLocalizer["Salary"]
                                
                            </th>
                            <th>
                                @SharedLocalizer["HireDate"]
                                
                            </th>
                            <th>
                                @SharedLocalizer["HireTime"]
                                
                            </th>
                            <th>
                                @SharedLocalizer["Email"]
                                
                            </th>
                            <th>
                                @SharedLocalizer["Department"]
                                
                            </th>
                            <th>
                                @SharedLocalizer["District"]
                                
                            </th>
                            <th>
                                @SharedLocalizer["City"]
                                
                            </th>
                            <th>
                                @SharedLocalizer["Country"]
                                
                            </th>
                            <th>
                                @SharedLocalizer["Actions"]
                                
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.Salary</td>
                                <td>@item.HireDate.Value.ToShortDateString()</td>
                                <td>@item.HireDate.Value.ToShortTimeString()</td>
                                <td>@item.Email</td>
                                <td>@item.DepartmentName</td>
                                <td>@item.District.Name</td>
                                <td>@item.District.City.Name</td>
                                <td>@item.District.City.Country.Name</td>
                                <td>
                                    <div class="btn-group">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                                                @SharedLocalizer["Actions"]
                                                
                                            </button>
                                            <div class="dropdown-menu">
                                                <a class="btn btn-danger dropdown-item font-weight-bold" asp-controller="Employee" asp-action="Delete" asp-route-id="@item.Id">
                                                    @SharedLocalizer["Delete"]
                                                    
                                                </a>
                                                <a class="btn btn-info dropdown-item font-weight-bold" asp-controller="Employee" asp-action="Update" asp-route-id="@item.Id">
                                                    @SharedLocalizer["Update"]
                                                    
                                                </a>
                                                @*<a class="btn btn-warning dropdown-item font-weight-bold" asp-controller="Employee" asp-action="Details" asp-route-id="@item.Id" asp-route-user="@item.IsActive">Details</a>*@
                                            <a class="btn btn-warning dropdown-item font-weight-bold"
                                               href="@Url.Action("Details", "Employee", new {
                                                              Id = item.Id,
                                                              IsActive = item.IsActive
                                                          })">
                                                @SharedLocalizer["Details"]
                                                
                                            </a>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>

</div>



@section DataTableScript{
    <script src="~/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="~/plugins/jszip/jszip.min.js"></script>
    <script src="~/plugins/pdfmake/pdfmake.min.js"></script>
    <script src="~/plugins/pdfmake/vfs_fonts.js"></script>
    <script src="~/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="~/plugins/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="~/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>

    <script src="~/plugins/jquery-ui/jquery-ui.min.js"></script>
    <script>
        $(function () {
            $("#Employees").DataTable({
                "responsive": true, "lengthChange": true, "autoWidth": false, "filter": true,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#Employees_wrapper .col-md-6:eq(0)');

            $("#datepicker1").datepicker();
            $("#datepicker2").datepicker();

        });
    </script>



}
