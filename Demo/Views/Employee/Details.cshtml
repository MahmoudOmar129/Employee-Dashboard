@model EmployeeVM




@{
    ViewData["Title"] = "Details";
}


<div class="content-wrapper">

    <div class="content-header">
        <div class="container">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <a class="btn btn-success font-weight-bold" asp-controller="Employee" asp-action="Index">Return</a>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Employees</a></li>
                        <li class="breadcrumb-item active">Employee Details</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>




    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Details for : @Model.Name</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form action="">
                        <div class="card-body">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" asp-for="IsActive" id="exampleCheck1" disabled>
                                <label class="form-check-label" asp-for="IsActive">Is Active</label>
                            </div>
                            <br />
                            <div class="form-group">
                                <label asp-for="Id">Employee Id</label>
                                <input type="text" class="form-control" asp-for="Id" disabled>
                            </div>
                            <div class="form-group">
                                <label asp-for="Name"> Name</label>
                                <input type="text" class="form-control" asp-for="Name" disabled>
                            </div>
                            <div class="form-group">
                                <label asp-for="Salary"> Salary</label>
                                <input type="number" class="form-control" asp-for="Salary" disabled>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email"> Email</label>
                                <input type="text" class="form-control" asp-for="Email" disabled>
                            </div>
                            <div class="form-group">
                                <label asp-for="Age">Age</label>
                                <input type="number" class="form-control" asp-for="Age" disabled>
                            </div>
                            <div class="form-group">
                                <label asp-for="Notes">Notes</label>
                                <textarea rows="3" class="form-control" asp-for="Notes" disabled></textarea>
                            </div>
                            <div class="form-group">
                                <label asp-for="HireDate">Hire Date</label>
                                <input type="text" class="form-control" asp-format="{0:dd/MM/yyyy}" asp-for="HireDate" disabled>
                            </div>
                            <div class="form-group">
                                <label asp-for="CreatedOn">Create Date</label>
                                <input type="text" class="form-control" asp-format="{0:dd/MM/yyyy}" asp-for="CreatedOn" disabled>
                            </div>
                            <div class="form-group">
                                <label asp-for="UpdatedOn">Update Date</label>
                                <input type="text" class="form-control" asp-format="{0:dd/MM/yyyy}" asp-for="UpdatedOn" disabled>
                            </div>
                            <div class="form-group">
                                <label asp-for="UpdatedOn">Update Time</label>
                                <input type="text" class="form-control" asp-format="{0:hh:mm}" asp-for="UpdatedOn" disabled>
                            </div>
                            <div class="form-group">
                                <label asp-for="DeletedOn">Delete Date</label>
                                <input type="text" class="form-control" asp-format="{0:dd/MM/yyyy}" asp-for="DeletedOn" disabled>
                            </div>

                            <div class="form-group">
                                <select asp-for="DepartmentId" class="form-control" disabled asp-items="(SelectList)ViewBag.DepartmentList">
                                </select>
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </form>
                </div>
                <!-- /.card -->
                <center>
                    <a class="btn btn-danger  font-weight-bold" asp-controller="Employee" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
                    <a class="btn btn-warning font-weight-bold" asp-controller="Employee" asp-action="Update" asp-route-id="@Model.Id">Update</a>
                </center>
            </div>
        </div>

    </div>



</div>


